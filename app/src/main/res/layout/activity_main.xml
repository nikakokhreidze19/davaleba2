<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintVertical_bias="0.04000002"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#3F51B5"
        android:text="Tic Tac Toe"
        android:rotationY="0"
        android:id="@+id/textView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.060000002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="First Player : 0"
        android:id="@+id/PlayerOneTV"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        android:layout_marginTop="32dp"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.100000024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Second Player : 0"
        android:id="@+id/PlayerTwoTV"
        app:layout_constraintTop_toBottomOf="@+id/PlayerOneTV"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        android:layout_margin="5dp"
        android:layout_marginBottom="112dp"/>


    -<TableLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:layout_constraintVertical_bias="0.32999998"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintHorizontal_bias="0.55"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/tableLayout"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    android:layout_margin="20dp"
    android:layout_gravity="center">


    -<TableRow
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="8dp">

    <Button
        android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn1"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn2"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn3"
        android:layout_margin="2dp"/>

</TableRow>


    -<TableRow
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="8dp">

    <Button
        android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn4"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn5"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn6"
        android:layout_margin="2dp"/>

</TableRow>


    -<TableRow
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="8dp">

    <Button android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn7"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn8"
        android:layout_margin="2dp"/>

    <Button android:layout_height="45pt"
        android:layout_width="45pt"
        android:id="@+id/btn9"
        android:layout_margin="2dp"/>

</TableRow>

</TableLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.26999998"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:text="Restart"
        android:id="@+id/resetButton"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.78"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="reset score"
        android:id="@+id/restartScoreButton"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintStart_toEndOf="@+id/PlayerOneTV"/>

</androidx.constraintlayout.widget.ConstraintLayout>